    "version": "0.2.0",
    "configurations": [

        {
            "name": "Compilar y depurar todo",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}\\a.out",
            "args": ["input.c"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Habilitar la impresión con sangría para gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Compilar"
        }
    ]
}